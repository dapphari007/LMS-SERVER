{
  "name": "leave_mgmt_new",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prestart": "node src/scripts/check-env.js",
    "fix:postgres": "node src/scripts/fix-postgres-config.js",
    "fix:connection": "node src/scripts/fix-server-connection.js",
    "test:railway": "node src/scripts/test-railway-connection.js",
    "check:routes": "node src/scripts/check-api-routes.js",
    "diagnose": "node src/scripts/diagnose-server.js",
    "start": "node server.js",
    "start:main": "node src/scripts/test-db-connection.js && npx prisma generate && node dist/server.js",
    "test:db": "node src/scripts/test-db-connection.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc && npm run ensure-scripts-dir && npm run copy-scripts",
    "ensure-scripts-dir": "mkdir -p dist/scripts",
    "copy-scripts": "cp -r src/scripts/*.js dist/scripts/ || true",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "run:migrations": "ts-node src/scripts/runMigrations.ts",
    "ensure:default-users": "ts-node -e \"require('./src/utils/ensure-default-users').ensureDefaultUsers().then(() => console.log('Default users check completed')).catch((err) => { console.error(err); process.exit(1); })\"",
    "create:test-user": "ts-node src/scripts/createTestUser.ts",
    "create:default-roles": "ts-node src/scripts/createDefaultRoles.ts",
    "cleanup:roles": "ts-node src/scripts/cleanupRoles.ts",
    "init:approval-workflows": "ts-node src/scripts/initApprovalWorkflowsScript.ts",
    "db:reset": "ts-node src/scripts/resetDatabase.ts",
    "db:fresh": "npm run db:reset && npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prisma:test": "ts-node src/scripts/test-prisma.ts",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "deploy": "git add . && git commit -m \"Deploy to Railway\" && git push",
    "deploy:force": "git add . && git commit -m \"Force deploy to Railway\" && git push -f"
  },
  "keywords": [
    "leave management",
    "hapi",
    "typeorm",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "description": "A comprehensive leave management system built with Hapi.js, TypeORM, and PostgreSQL.",
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "@hapi/jwt": "^3.2.0",
    "@prisma/client": "^5.10.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "prisma": "^5.10.2",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.17",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/hapi__hapi": "^20.0.13",
    "@types/hapi__jwt": "^2.0.3",
    "@types/joi": "^17.2.3",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.14",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
